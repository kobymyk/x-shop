<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sqlSelectProducts" class="java.lang.String">
        <constructor-arg value="SELECT t.* FROM product t"/>
    </bean>
    <bean id="sqlFetchProduct" class="java.lang.String">
        <constructor-arg value="SELECT t.* FROM product t WHERE t.id = ?"/>
    </bean>
    <bean id="dmlUpdateRow" class="java.lang.String">
        <constructor-arg value="UPDATE product t SET t.name = :name WHERE t.id = :id"/>
    </bean>
    <bean id="dmlInsertRow" class="java.lang.String">
        <constructor-arg value="INSERT INTO product(id, name, price, creation_date) values (seq_product.nextval, :name, :price, sysdate)"/>
    </bean>
    <bean id="dmlDeleteRow" class="java.lang.String">
        <constructor-arg value="DELETE product t WHERE t.id = ?"/>
    </bean>
</beans>